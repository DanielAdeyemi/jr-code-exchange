@{
  Layout = "_Layout";
}

@using CodeExchange.ViewModels

@model LoginViewModel

<h2>Log in with your account</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email, new {@required="required"})

    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password, new {@required="required"})

    <input type="submit" value="Log in" class="btn btn-success" />
}

<p>@Html.ActionLink("Create an Account", "Register", "Account")</p>
<p>@Html.ActionLink("Back - Home", "Index", "Home")</p>